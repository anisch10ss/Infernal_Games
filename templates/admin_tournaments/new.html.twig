{% extends 'backBase.html.twig' %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Blogs </h3>

                <li class="breadcrumb-item active" aria-current="page">New blog</li>
            </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="blogName">Title</label>
                        <input type="text" class="form-control" id="blogTitle" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <label for="blogDescription">Content</label>
                        <textarea class="form-control" id="blogContent" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}