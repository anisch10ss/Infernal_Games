{% extends 'backBase.html.twig' %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Games </h3>

                <li class="breadcrumb-item active" aria-current="page">Edit game.name</li>
            </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="gameName">Name</label>
                        <input type="text" class="form-control" id="gameName" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="gameDescription">Description</label>
                        <textarea class="form-control" id="gameDescription" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="gamePrice">Price</label>
                        <input class="form-control" id="gamePrice" rows="4" type="number">
                    </div>
                    <div class="form-group">
                        <label>Game Picture</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                          </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="gameTrailerUrl">Trailer Url</label>
                        <input type="text" class="form-control" id="gameTrailerUrl" placeholder="Url">
                    </div>
                    <div class="form-group">
                        <label for="gameCategory">Category</label>
                        <input class="form-control" id="gameCategory" rows="4" placeholder="Category"></input>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}