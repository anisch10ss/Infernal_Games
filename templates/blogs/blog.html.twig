{% extends 'frontBase.html.twig' %}

{% block title %}blog.name{% endblock %}
{% block body %}
    <!-- Page top section -->
    <section class="page-top-section set-bg" data-setbg="{{ asset('front/img/page-top-bg/1.jpg') }}">
        <div class="page-info">
            <h2>Blogs</h2>
            <div class="site-breadcrumb">
                <a href="">Home</a>  /
                <span>blog</span>
            </div>
        </div>
    </section>
    <!-- Page top end-->


    <!-- Games section -->
    <section class="games-single-page">
        <div class="container">
            <div class="game-single-preview">
                <img src="{{ asset('front/img/blog-big/3.jpg') }}" alt="" style="width: 1145px;height: 485px">
            </div>
            <div class="row">
                <div class="col-xl-9 col-lg-8 col-md-7 game-single-content">
                    <h2 class="gs-title">blog.title</h2>
                    <h4>About the game</h4>
                    <p>blog.content</p>
                    <div class="geme-social-share pt-5 d-flex">
                        <p>Share:</p>
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-dribbble"></i></a>
                        <a href="#"><i class="fa fa-behance"></i></a>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-4 col-md-5 sidebar game-page-sideber">
                    <div id="stickySidebar">
                        <div class="widget-item">
                            <div class="rating-widget">
                                <h4 class="widget-title">Rating</h4>
                                <div class="rating">
                                    {% if true is not null %}
                                        <h5><span>blog.rating</span> / 5</h5>
                                    {% else %}
                                        <h5><span>TBD</span></h5>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <!-- LehnÃ© Ads -->
                        <div class="widget-item">
                            <div class="testimonials-widget">
                                <h4 class="widget-title">Ads</h4>
                                <div class="testim-text">
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolo re magna aliqua. Quis ipsum suspend isse ultrices.</p>
                                    <h6><span>James Smith,</span>Gamer</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Games end-->
    <section class="game-author-section">
        <div class="container">
            <!-- Taswirt eluser -->
            <div class="game-author-pic set-bg" data-setbg="{{ asset('front/img/author.jpg') }}"></div>
            <div class="game-author-info">
                <h4>Written by: blog.author</h4>
            </div>
        </div>
    </section>

{% endblock %}