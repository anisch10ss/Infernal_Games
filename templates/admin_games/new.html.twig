{% extends 'backBase.html.twig' %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Games </h3>
            </div>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                    {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
                      <div class="form-group">
                        <label for="gameName">Name</label>
                          {{ form_widget(form.name,{'attr':{'class':'form-control', 'placeholder':'Name'}}) }}
                          <div class="text-danger">{{ form_errors(form.name) }}</div>
                    </div>

                    <div class="form-group">
                        <label for="gameDescription">Description</label>
                        {{ form_widget(form.description,{'attr':{'class':'form-control', 'placeholder':'Description'}}) }}
                        <div class="text-danger">{{ form_errors(form.description) }}</div>
                    </div>
                    <div class="form-group">
                        <label for="gamePrice">Price</label>
                        {{ form_widget(form.price,{'attr':{'class':'form-control', 'placeholder':'Price'}}) }}
                        <div class="text-danger">{{ form_errors(form.price) }}</div>
                    </div>
                    <div class="form-group">
                        <label>Game Picture</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                          </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="gameTrailerUrl">Trailer Url</label>
                        {{ form_widget(form.trailerUrl,{'attr':{'class':'form-control', 'placeholder':'Trailer'}}) }}
                        <div class="text-danger">{{ form_errors(form.trailerUrl) }}</div>
                    </div>
                    <div class="form-group">
                        <label for="gameCategory">Category</label>
                        {{ form_widget(form.category,{'attr':{'class':'form-control', 'placeholder':'Categoty'}}) }}
                        <div class="text-danger">{{ form_errors(form.category) }}</div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark">Cancel</button>

                {% do form.rating.setRendered() %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}